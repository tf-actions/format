{
	"compilerOptions": {
		"target": "ES2023",
		"module": "Node16",
		"moduleResolution": "Node16",
		"declaration": true,
		"strict": true,
		"strictNullChecks": true,
		"incremental": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true
	},
	"include": ["src", "src/lib"]
}
